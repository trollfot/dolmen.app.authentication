<configure
   xmlns="http://namespaces.zope.org/zope"
   xmlns:browser="http://namespaces.zope.org/browser"
   xmlns:grok="http://namespaces.zope.org/grok">

  <include package="zope.browserpage" file="meta.zcml" />
  <include package="zope.i18n" file="meta.zcml" />
  <include package="zope.principalregistry" file="meta.zcml" />
  <include package="megrok.z3cform.base" file="meta.zcml" />

  <include package="grok" />
  <include package="zope.container" />
  <include package="zope.principalregistry" />
  <include package="zope.publisher" />
  <include package="zope.site" />
  <include package="zope.app.wsgi" />
  <include package="zope.app.appsetup" />
  <include package="zope.app.publication" />

  <include package="megrok.z3cform.layout" />
  <include package="dolmen.app.site" />
  <include package="dolmen.app.authentication" />

  <includeOverrides package="dolmen.app.layout" file="skin.zcml" />

  <browser:defaultView
      name="index"
      for="zope.container.interfaces.IContainer"
      />

  <!-- Security -->
  <securityPolicy
      component="zope.securitypolicy.zopepolicy.ZopeSecurityPolicy"
      />

  <unauthenticatedPrincipal
      id="zope.anybody"
      title="Unauthenticated User"
      />

  <grant
      permission="zope.View"
      principal="zope.anybody"
      />

  <principal
      id="zope.mgr"
      title="Manager"
      login="mgr"
      password="mgrpw"
      />

  <grantAll principal="zope.mgr" />

</configure>
